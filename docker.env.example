# Application Settings
APP_NAME=chess-cognify-ai
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Database (Docker: use service name 'postgres' as host)
DATABASE_URL=postgresql://chess_user:chess_password@postgres:5432/chess_cognify
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
EXPLANATION_CONCURRENCY=5
# Required by entrypoint.sh for pg_isready wait
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=chess_user
POSTGRES_DB=chess_cognify

# Redis (Docker: use service name 'redis')
REDIS_URL=redis://redis:6379/0
REDIS_CACHE_TTL=86400

# Stockfish Engine (Docker: Debian apt installs to /usr/games/stockfish)
STOCKFISH_PATH=/usr/games/stockfish
STOCKFISH_DEPTH=18
STOCKFISH_THREADS=4
STOCKFISH_HASH=256
STOCKFISH_TIMEOUT=30

# LLM Providers
## LLM Providers



# LLM Settings
LLM_PROVIDER=openai

# OpenAI Settings (Primary)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
OPENAI_VISION_MODEL=gpt-4o-mini

# Groq (Alternate)
GROQ_API_KEY=
GROQ_MODEL=meta-llama/llama-4-scout-17b-16e-instruct
USE_VISION_FOR_EXPLANATIONS=true


# Vector Database (Books) - Qdrant (Docker: use service name 'qdrant')
QDRANT_URL=http://qdrant:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=chess_books

# Embedding Model - Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=bge-m3

# Security
API_KEY_EXPIRATION_HOURS=24
SECRET_KEY=change-me-in-production

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5173,http://127.0.0.1:5173


# Langfuse
LANGFUSE_SECRET_KEY=
LANGFUSE_PUBLIC_KEY=
LANGFUSE_BASE_URL=
LANGFUSE_ENABLED=true