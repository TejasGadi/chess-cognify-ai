# Application Settings
APP_NAME=chess-cognify-ai
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/chess_cognify
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=86400

# Stockfish Engine
STOCKFISH_PATH=/usr/local/bin/stockfish
STOCKFISH_DEPTH=18
STOCKFISH_THREADS=4
STOCKFISH_HASH=256
STOCKFISH_TIMEOUT=30

# LLM Providers - Groq (Primary and Alternative)
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.1-70b-versatile
GROQ_ALTERNATIVE_MODEL=mixtral-8x7b-32768
LLM_PROVIDER=groq

# LLM Settings
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=500

# Vector Database (Books) - Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=chess_books

# Embedding Model - Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=bge-m3

# Security
SECRET_KEY=your_secret_key_here_change_in_production
API_KEY_EXPIRATION_HOURS=24

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
