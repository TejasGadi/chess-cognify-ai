# Application
APP_NAME=chess-cognify-ai
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO
SECRET_KEY=change-me-in-production

# Database
DATABASE_URL=postgresql://chess_user:chess_password@localhost:5432/chess_cognify
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_TTL=86400

# Stockfish Engine
STOCKFISH_PATH=/usr/local/bin/stockfish
STOCKFISH_DEPTH=10
STOCKFISH_DEEP_DEPTH=20
STOCKFISH_THREADS=4
STOCKFISH_HASH=256
STOCKFISH_TIMEOUT=30

# LLM Provider - OpenAI
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-proj-...
OPENAI_MODEL=gpt-4o
OPENAI_VISION_MODEL=gpt-4o

# LLM Settings
LLM_TEMPERATURE=0.2  # Lower temperature for more deterministic output and reduced hallucinations
LLM_MAX_TOKENS=500

# Parallel Processing
EXPLANATION_CONCURRENCY=10

# Vector Database (Books) - Qdrant
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=chess_books

# Embedding Model - Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_EMBEDDING_MODEL=bge-m3

# Langfuse Observability
LANGFUSE_SECRET_KEY=sk-lf-...
LANGFUSE_PUBLIC_KEY=pk-lf-...
LANGFUSE_BASE_URL=https://cloud.langfuse.com
# LANGFUSE_BASE_URL=https://us.cloud.langfuse.com  # For US region
LANGFUSE_ENABLED=true

# Security
API_KEY_EXPIRATION_HOURS=24

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
